{
	"name": "pontovet-site",
	"version": "1.0.0",
	"description": "Site institucional PontoVet com redirecionamento para WhatsApp",
	"main": "src/server.js",
	"scripts": {
		"start": "node src/server.js",
		"dev": "nodemon src/server.js",
		"lint": "eslint .",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"check": "npm run lint && npm run format:check",
		"validate:content": "node scripts/validate-content.js",
		"images:fetch": "node scripts/fetch-external-images.js",
		"images:optimize": "node scripts/optimize-images.js",
		"images:all": "npm run images:fetch && npm run images:optimize",
		"images:lint": "node scripts/lint-image-names.js"
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"apicache": "^1.6.3",
		"compression": "^1.8.1",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"express-rate-limit": "^8.2.1",
		"helmet": "^7.2.0",
		"morgan": "^1.10.0",
		"sanitize-html": "^2.12.1",
		"sharp": "^0.34.5",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"eslint": "^9.13.0",
		"globals": "^15.9.0",
		"nodemon": "^3.0.2",
		"prettier": "^3.3.3"
	}
}
